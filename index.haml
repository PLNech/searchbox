<!doctype html>
%html.no-js{lang: "en"}
  %head
    %meta{charset: "utf-8"}
    %meta{content: "ie=edge", http-equiv: "x-ua-compatible"}
    %meta{content: "width=device-width, initial-scale=1.0", name: "viewport"}
    %meta{content: "Searchbox is an html/css/scss/svg generator for your search input.", name: "description"}
    %title Searchbox Generator
    %link{rel: "shortcut icon", type: "image/x-icon", href: "favicon.ico?"}
    %link{href: "app.css", rel: "stylesheet"}
    %script{src: "https://use.typekit.net/rwx3htg.js"}
    :javascript
      try{Typekit.load({ async: false });}catch(e){}

  %body.demos
    .message-demo
    .demo-header
      %a.github-source{href: "https://github.com/Shipow/searchbox"}
        %svg
          %use{xlink:href: "#github-banner"}
      %h1
        %svg
          %use{xlink:href: "#sbx-icon-search-6"}
        SearchBox
    %aside.generator-sidebar
      .settings
        %p
          %label Select a Theme
          %select.select{name: "namespace"}
            %option{value: "sbx-custom", selected: true} Custom
            %option{value: "sbx-google"} Google
            %option{value: "sbx-amazon"} Amazon
            %option{value: "sbx-facebook"} Facebook
            %option{value: "sbx-medium"} Medium
            %option{value: "sbx-meetup"} Meetup
            %option{value: "sbx-spotify"} Spotify
            %option{value: "sbx-twitter"} Twitter

        %form#settings
          %h3 Appearance
          %p
            %label width (px)
            %input{type: "number", name: "input-width-px", value: "250", step: "2"}
          %p
            %label height (px)
            %input{type: "number", name: "input-height-px", value: "50", step: "2"}
          %p
            %label font-size (px)
            %input{type: "number", name: "font-size-px", value: "14"}
          %p
            %label border-width (px)
            %input{type: "number", name: "border-width-px", value: "2"}
          %p
            %label border-radius (px)
            %input{type: "number", name: "border-radius-px", value: "25"}
          %p
            %label border-color
            %input.jscolor{type: "text", name: "input-border-color", value: "#ccc"}
          %p
            %label bg-color
            %input.jscolor{type: "text", name: "input-background", value: "white"}
          %p
            %label placeholder-color
            %input.jscolor{type: "text", name: "placeholder-color", value: "#aaa"}

          %h3 Search icon
          %p
            %label icon
            %select.select-icon{name: "icon"}
              %option{value: "sbx-icon-search-1"} 1
              %option{value: "sbx-icon-search-2"} 2
              %option{value: "sbx-icon-search-3"} 3
              %option{value: "sbx-icon-search-4"} 4
              %option{value: "sbx-icon-search-5"} 5
              %option{value: "sbx-icon-search-6"} 6
              %option{value: "sbx-icon-search-7"} 7
              %option{value: "sbx-icon-search-8"} 8
              %option{value: "sbx-icon-search-9"} 9
              %option{value: "sbx-icon-search-10"} 10
              %option{value: "sbx-icon-search-11"} 11
              %option{value: "sbx-icon-search-12"} 12
              %option{value: "sbx-icon-search-13"} 13
              %option{value: "sbx-icon-search-14"} 14
              %option{value: "sbx-icon-search-15"} 15
              %option{value: "sbx-icon-search-16"} 16
              %option{value: "sbx-icon-search-17", selected: true} 17
              %option{value: "sbx-icon-search-18"} 18
              %option{value: "sbx-icon-search-19"} 19
              %option{value: "sbx-icon-search-20"} 20
              %option{value: "sbx-icon-search-21"} 21
              %option{value: "sbx-icon-search-22"} 22
          %p
            %label icon-size (px)
            %input{type: "number", name: "icon-size-px", value: "28", step: "2"}
          %p
            %label icon-position
            %select.select{name: "icon-position"}
              %option{value: "left", selected: true} Left
              %option{ value: "right"} Right
          %p
            %label icon-color
            %input.jscolor{type: "text", name: "icon-color", value: "#E5186F"}
          %p
            %label icon-bg-color
            %input.jscolor{type: "text", name: "icon-background", value: "#FFFFFF"}
          %p
            %label icon-bg-opacity
            %input{type: "text", name: "icon-background-opacity", value: "0"}

          %h3 Focus
          %p
            %label focus-border-color
            %input.jscolor{type: "text", name: "input-focus-border-color", value: "#E5186F"}
          %p
            %label focus-bg-color
            %input.jscolor{type: "text", name: "input-focus-background", value: "white"}

          %h3 Clear
          %p
            %label icon-clear
            %select.select-icon{name: "icon-clear"}
              %option{value: "sbx-icon-clear-1"} 1
              %option{value: "sbx-icon-clear-2"} 2
              %option{value: "sbx-icon-clear-3"} 3
              %option{value: "sbx-icon-clear-4"} 4
              %option{value: "sbx-icon-clear-5", selected: true} 5
          %p
            %label icon-clear-size (px)
            %input{type: "number", name: "clear-size-px", value: "18", step: "2"}
          %p
            %a.btn.download-zip{href: "javascript:void(0);"}
              %svg.icon
                %use{xlink:href: "#download-icon"}
              Download .zip

    %main.main-content.hide
      %h2 Preview
      %section.preview
        .searchbox-demo.sbx-custom-demo
          %form.searchbox.sbx-custom{role: "search", novalidate: true}
            %input.sbx-custom__input{type: "search", name: "search", placeholder: "Search your website", autocomplete: "off", required: true}
            %button.sbx-custom__submit{type: "submit"}
              %svg
                %use{xlink:href: "#sbx-search-icon-10"}
            %button.sbx-custom__reset{type: "reset"}
              %svg
                %use{xlink:href: "#sbx-icon-clear-3"}

      %section#snippets
        .row
          .col-6
            %ul.inline-list
              %li HTML + Images (SVG)
              %li.right
            .pane
              %a.btn.copy{href: "javascript:void(0);", data-clipboard-target:"#html"}
                %svg.icon
                  %use{xlink:href: "#copy-icon"}
                Copy
              %pre.snippet.bordered
                %code#html.language-markup
          .col-6
            %ul.tabs{data-tabs: true}
              %li
                %a.btn.active{data-tab: true, href: "#tabprefix"} CSS
              %li
                %a.btn{data-tab: true, href: "#tabscss"} SCSS
            %div{data-tabs-content: true}
              #tabprefix.tabs-pane.active{data-tabs-pane: true}
                %a.btn.copy{href: "javascript:void(0);", data-clipboard-target:"#css-prefix"}
                  %svg.icon
                    %use{xlink:href: "#copy-icon"}
                  Copy
                %pre.snippet.bordered
                  %code#css-prefix.language-css
              #tabscss.tabs-pane{data-tabs-pane: true}
                %a.btn.copy{href: "javascript:void(0);", data-clipboard-target:"#scss"}
                  %svg.icon
                    %use{xlink:href: "#copy-icon"}
                  Copy
                %pre.snippet
                  %code#scss.language-scss

    .svg-icons{style: "height: 0; width: 0; position: absolute; visibility: hidden"}
      <!-- inject:svg --><!-- endinject -->

    .json.amazon-theme
    .json.facebook-theme
    .json.google-theme
    .json.medium-theme
    .json.meetup-theme
    .json.spotify-theme
    .json.twitter-theme

    %script{src: "js/vendors/jquery-2.2.0.min.js"}
    %script{src: "js/vendors/tabby.min.js"}
    %script{src: "js/vendors/prism.js", data-manual}
    %script{src: "js/vendors/jscolor.min.js"}
    %script{src: "js/vendors/jquery.selectric.min.js"}
    %script{src: "js/vendors/clipboard.min.js"}
    %script{src: "js/vendors/jszip.min.js"}
    %script{src: "js/vendors/FileSaver.min.js"}
    %script{src: "js/vendors/sass.js"}
    %script{src: "js/vendors/autoprefixer.js"}

    %script{src: "js/searchbox.js"}

    %script{src: "js/app.js"}
