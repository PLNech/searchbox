<!doctype html>
%html.no-js{lang: "en"}
  %head
    %meta{charset: "utf-8"}
    %meta{content: "ie=edge", http-equiv: "x-ua-compatible"}
    %meta{content: "width=device-width, initial-scale=1.0", name: "viewport"}
    %meta{content: "Searchbox is an html/css/scss/svg generator for your search input.", name: "description"}
    %title Searchbox Generator
    %link{rel: "shortcut icon", type: "image/x-icon", href: "favicon.ico?"}
    %link{href: "app.css", rel: "stylesheet"}
    %script{src: "https://use.typekit.net/rwx3htg.js"}
    :javascript
      try{Typekit.load({ async: false });}catch(e){}

  %body.demos
    .demo-header
      %a.github-source{href: "https://github.com/Shipow/searchbox"}
        %svg
          %use{xlink:href: "#github-banner"}
      %h1
        %svg
          %use{xlink:href: "#search-icon-7"}
        SearchBox
    %aside.generator-sidebar
      .settings
        %p
          %label Select a Theme
          %select.select{name: "search-namespace"}
            %option{value: "sbx-custom", selected: true} Custom
            %option{value: "sbx-google"} Google
            %option{value: "sbx-amazon"} Amazon
            %option{value: "sbx-facebook"} Facebook
            %option{value: "sbx-medium"} Medium
            %option{value: "sbx-meetup"} Meetup
            %option{value: "sbx-spotify"} Spotify
            %option{value: "sbx-twitter"} Twitter

        %form#settings
          %h3 Appearance
          %p
            %label width (px)
            %input{type: "number", name: "search-input-width-px", value: "250"}
          %p
            %label height (px)
            %input{type: "number", name: "search-input-height-px", value: "50"}
          %p
            %label font-size (px)
            %input{type: "number", name: "search-font-size-px", value: "14"}
          %p
            %label border-width (px)
            %input{type: "number", name: "search-border-width-px", value: "2"}
          %p
            %label border-radius (px)
            %input{type: "number", name: "search-border-radius-px", value: "25"}
          %p
            %label border-color
            %input.jscolor{type: "text", name: "search-input-border-color", value: "#ccc"}
          %p
            %label bg-color
            %input.jscolor{type: "text", name: "search-input-background", value: "white"}
          %p
            %label placeholder-color
            %input.jscolor{type: "text", name: "search-placeholder-color", value: "#aaa"}

          %h3 Search icon
          %p
            %label icon-img
            %select.select-icon{name: "search-icon"}
              %option{value: "search-icon-1"} 1
              %option{value: "search-icon-2"} 2
              %option{value: "search-icon-3"} 3
              %option{value: "search-icon-4"} 4
              %option{value: "search-icon-5"} 5
              %option{value: "search-icon-6"} 6
              %option{value: "search-icon-7"} 7
              %option{value: "search-icon-8"} 8
              %option{value: "search-icon-9"} 9
              %option{value: "search-icon-10"} 10
              %option{value: "search-icon-11"} 11
              %option{value: "search-icon-12"} 12
              %option{value: "search-icon-13"} 13
              %option{value: "search-icon-14"} 14
              %option{value: "search-icon-15"} 15
              %option{value: "search-icon-16"} 16
              %option{value: "search-icon-17", selected: true} 17
              %option{value: "search-icon-18"} 18
              %option{value: "search-icon-19"} 19
              %option{value: "search-icon-20"} 20
              %option{value: "search-icon-21"} 21
              %option{value: "search-icon-22"} 22
          %p
            %label icon-size (px)
            %input{type: "number", name: "search-icon-size-px", value: "28"}
          %p
            %label icon-position
            %span.radio-control
              %label.label-radio
                %input{type: "radio", name: "search-icon-position", value: "right"}
                Right
              %label.label-radio
                %input{type: "radio", name: "search-icon-position", value: "left", checked: true}
                Left
          %p
            %label icon-color
            %input.jscolor{type: "text", name: "search-icon-color", value: "#E5186F"}
          %p
            %label icon-bg-color
            %input.jscolor{type: "text", name: "search-icon-background", value: "#FFFFFF"}
          %p
            %label icon-bg-opacity
            %input{type: "text", name: "search-icon-background-opacity", value: "0"}

          %h3 Focus
          %p
            %label focus-border-color
            %input.jscolor{type: "text", name: "search-input-focus-border-color", value: "#E5186F"}
          %p
            %label focus-bg-color
            %input.jscolor{type: "text", name: "search-input-focus-background", value: "white"}

          %h3 Clear
          %p
            %label icon-clear-img
            %select.select-icon{name: "search-clear-icon"}
              %option{value: "clear-icon-1"} 1
              %option{value: "clear-icon-2"} 2
              %option{value: "clear-icon-3"} 3
              %option{value: "clear-icon-4"} 4
              %option{value: "clear-icon-5", selected: true} 5
          %p
            %label icon-clear-size (px)
            %input{type: "number", name: "search-clear-size-px", value: "18"}

    %main.main-content.hide
      %h2 Preview
      #demo.sbx-custom_demo
        %form.searchbox.sbx-custom{role: "search", novalidate: true}
          %input.sbx-custom__input{type: "search", name: "search", placeholder: "Search your website", autocomplete: "off", required: true}
          %button.sbx-custom__submit{type: "submit"}
            %svg
              %use{xlink:href: "#search-icon-10"}
          %button.sbx-custom__reset{type: "reset"}
            %svg
              %use{xlink:href: "#clear-icon-3"}
      %p.message-demo.hide
        The query "<strong class="query"></strong>" has been triggered.
      %section#snippets

        %h2 Snippets
        .row
          .col-6
            %ul.tabs{data-tabs: true}
              %li
                %a.btn.active{data-tab: true, href: "#tabprefix"} CSS
              %li
                %a.btn{data-tab: true, href: "#tabscss"} SCSS
            %div{data-tabs-content: true}
              #tabprefix.tabs-pane.active{data-tabs-pane: true}
                %pre.snippet
                  %code#css-prefix.language-css
              #tabscss.tabs-pane{data-tabs-pane: true}
                %pre.snippet
                  %code#scss.language-scss
          .col-6
            %ul.inline-list
              %li HTML + Images (SVG)
              %li.right
                %a.btn.download-zip{href: "javascript:void(0);"}
                  %svg
                    %use{xlink:href: "#download-icon"}
                  Download .zip
            %pre.snippet
              %code#html.language-markup


    .svg-icons{style: "height: 0; width: 0; position: absolute; visibility: hidden"}
    <!-- inject:svg --><!-- endinject -->


    .theme-json.amazon-theme
    .theme-json.facebook-theme
    .theme-json.google-theme
    .theme-json.medium-theme
    .theme-json.meetup-theme
    .theme-json.spotify-theme
    .theme-json.twitter-theme

    %script{src: "js/vendors/jquery-2.2.0.min.js"}
    %script{src: "js/vendors/tabby.min.js"}
    %script{src: "js/vendors/prism.js", data-manual}
    %script{src: "js/vendors/jscolor.min.js"}
    %script{src: "js/vendors/jquery.selectric.min.js"}
    %script{src: "js/vendors/jszip.min.js"}
    %script{src: "js/vendors/FileSaver.min.js"}
    %script{src: "js/vendors/sass.js"}
    %script{src: "js/vendors/autoprefixer.js"}

    %script{src: "js/searchbox.js"}

    %script{src: "js/app.js"}
